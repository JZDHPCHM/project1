<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="SYS_ROLE" author="framework">
        <createTable tableName="SYS_ROLE" remarks="新核心角色">
			<column name="ROLE_ID"				type="java.sql.Types.VARCHAR(100)"		remarks="角色号">
			<constraints primaryKey="true"/>
			</column>
			<column name="ROLE_NAME"			type="java.sql.Types.VARCHAR(100)"		remarks="角色名"></column>
			<column name="ROLE_STATUS"	    	type="java.sql.Types.VARCHAR(100)"		remarks="角色状态"></column>
			<column name="ROLE_TYPE"			type="java.sql.Types.VARCHAR(100)"		remarks="角色类型"></column>
			<column name="INPUT_USER_ID"		type="java.sql.Types.VARCHAR(100)"		remarks="创建人"></column>
			<column name="INPUT_TIME"			type="java.sql.Types.VARCHAR(100)"		remarks="创建时间"></column>
			<column name="UPDATE_TIME"	    	type="java.sql.Types.VARCHAR(100)"		remarks="更新时间"></column>
			
		</createTable>
    </changeSet>
</databaseChangeLog>
